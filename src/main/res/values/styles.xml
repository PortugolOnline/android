<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TemaDoAplicativo" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- https://stackoverflow.com/a/30032157/1657502 -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="TemaDoAplicativo.NavDrawer">
    </style>

    <!-- TabLayout -->
    <!-- https://guides.codepath.com/android/google-play-style-tabs-using-tablayout -->
    <style name="TemaDoAplicativo.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TemaDoAplicativo.TabLayout.TextoDoTitulo</item>
    </style>

    <style name="TemaDoAplicativo.TabLayout.TextoDoTitulo" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Toolbar -->
    <!-- https://guides.codepath.com/android/using-the-app-toolbar -->
    <style name="TemaDaActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="TemaDaActionBar.TextoDoTitulo" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
